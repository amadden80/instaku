<meta charset="utf-8">

<title>instaku</title>

<!--  Fonts -->
<link href='https://fonts.googleapis.com/css?family=Cookie' rel='stylesheet' type='text/css'>
<link href="http://fonts.googleapis.com/css?family=Dancing+Script:700|EB+Garamond" rel="stylesheet" type="text/css" />

<!--  Stylesheets -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/stylesheets/styles.css">


<!--  Front-End Templates -->
<script type="text/template" id="haiku-template">
  <div class="content-block haiku">
    <h2 class='username'>
      <%%= user.username %>
    </h2>
    <p>
      <%%= haiku.body %>
    </p>
    <section class="comment-list">

      <%% _.each(haiku.comments, function(comment){ %>
        <div class="comment">
          <h4 class="username">
            <%%= comment.username %>
          </h4>
          <p class="comment-body">
            <%%= comment.body %>
          </p>
        </div>
      <%% }); %>

      <form class='commenter'>
        <input type="text" name="comment[body]" placeholder="...commet">
        <input type="hidden" name="user_id" value="<%%= user._id %>">
        <input type="hidden" name="haiku_id" value="<%%= haiku._id %>">
        <input type="submit" style="visibility: hidden;"/>
      </form>
    </section>
  </div>
</script>



<!--  Javascripts -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.js" charset="utf-8"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore.js" charset="utf-8"></script>
<script src="/javascripts/scripts.js" charset="utf-8"></script>
